<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :name, class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= label f, :url, class: "control-label" %>
    <%= text_input f, :url, class: "form-control" %>
    <%= error_tag f, :url %>
  </div>

  <div class="form-group">
    <%= label f, :size, class: "control-label" %>
    <%= text_input f, :size, class: "form-control" %>
    <%= error_tag f, :size %>
  </div>

  <div class="form-group">
    <%= label f, :image_binary, class: "control-label" %>
    <%= text_input f, :image_binary, class: "form-control" %>
    <%= error_tag f, :image_binary %>
  </div>

  <div class="form-group">
    <%= label f, :image_binary_type, class: "control-label" %>
    <%= text_input f, :image_binary_type, class: "form-control" %>
    <%= error_tag f, :image_binary_type %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
